<div class="container">
  <h1 class="center">Comentario</h1>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>
          <b>
            <%= @comment.name %>
          </b>
          Hecho el d√≠a <%= @comment.created_at.strftime('%d-%m-%Y') %>
        </p>
      </div>
      <div class="panel-body">
        <p>
