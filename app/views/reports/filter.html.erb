<h1>Reportes</h1>
<h4>Filtrar por categoría:</h4>

<%= form_tag "/reports/filter" do %>

  <div class="filter-options">

    <div class="report-select">
      <%= select_tag("category", options_for_select(["Todas", "Limpieza", "Atención al cliente", "Ubicación", "Seguridad", "Otras"], :selected => @selected_category)) %>
    </div>

    <div class="form-group btn btn-primary">
      <%=  submit_tag 'Filtrar', :name => 'filter', :class => 'submit-btn' %>
    </div>

  </div>

<% end %>

<div class="reports">
  <%= image_tag @bar_chart_selected %>
</div>