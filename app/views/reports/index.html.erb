<h1>Reportes</h1>
<h4>Filtrar por categorÃ­a:</h4>

<%= form_tag "/reports/filter" do %>

  <div class="filter-options">

    <div class="report-select">
      <%= select_tag("category", options_for_select(["Todas"] + @user.categories, :selected => @selected_category)) %>
    </div>

    <div class="report-select">
      <%= text_field_tag :start_date %>
    </div>

    <div class="report-select">
      <%= text_field_tag :end_date %>
    </div>

    <div class="form-group btn btn-primary">
        <%=  submit_tag 'Filtrar', :name => 'filter', :class => 'submit-btn btn btn-primary' %>
    </div>

  </div>

<% end %>

<%= javascript_tag do %>
  $(document).ready(function(){
    $('#start_date').datepicker();
    $('#end_date').datepicker()
  });
<% end %>