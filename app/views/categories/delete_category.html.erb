<%= form_tag "/categories/add" do %>

  <div class="add-categories">

    <div class="field">
      <b>Agregar categor√≠a:</b>
      <%= text_field_tag("new_category") %>
    </div>

    <div class="form-group">
      <%=  submit_tag 'Agregar', :name => 'add', :class => 'add-btn btn btn-primary' %>
    </div>

  </div>

  <div class="actual-categories">
    <%@user.categories.each do |category|%>
      <div class="category">
        <%=category%>
        <%= link_to '', {controller: 'categories', action: 'delete_category', :category_to_delete => category}, :class => 'close close-categories' %>
      </div>
    <%end %>
  </div>

<% end %>